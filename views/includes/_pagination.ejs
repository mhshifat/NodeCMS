<% if (currentPage > 0) { %>
  <ul class="pagination justify-content-center mb-4">
    <% if (currentPage > 1) { %>
      <li class="page-item">
        <a class="page-link" href="/?page=<%= Number(currentPage) - 1 %>">&larr; Older</a>
      </li>
      <% } %>
        <% if (currentPage != count) { %>
          <li class="page-item">
            <a class="page-link" href="/?page=<%= Number(currentPage) + 1 %>">Newer &rarr;</a>
          </li>
          <% } %>
  </ul>
  <% } %>