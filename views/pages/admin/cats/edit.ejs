<div class="row">
  <div class="col-md-4">
    <h4>Edit Category</h4>
    <form action="/admin/categories/edit/<%= cat._id %>" method="POST">
      <div class="form-group">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      </div>
      <div class="form-group">
        <label for="cat">Category Name</label>
        <input type="text" name="cat" class="form-control" autofocus autocomplete="off" id="cat" value="<%= cat.name %>">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary form-control">Update</button>
      </div>
    </form>
  </div>
</div>