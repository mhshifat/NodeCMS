<!-- Page Content -->
<div class="container">

  <div class="row">

    <!-- Post Content Column -->
    <div class="col-lg-8">

      <!-- Title -->
      <h4 class="mt-4">
        <%= post.title %>
      </h4>

      <!-- Author -->
      <!-- <p class="lead">
        by
        <a href="#">Start Bootstrap</a>
      </p> -->

      <!-- <hr> -->

      <!-- Date/Time -->
      <!-- <p>Posted on January 1, 2018 at 12:00 PM</p> -->

      <hr>

      <!-- Preview Image -->
      <img class="img-fluid rounded" width="100%" src="/images/post-images/<%= post.image %>" alt="post image">

      <hr>

      <!-- Post Content -->
      <p class="lead">
        <%= post.body %>
      </p>

      <hr>

      <!-- Comments Form -->
      <div class="card my-4">
        <h5 class="card-header">Leave a Comment:</h5>
        <div class="card-body">
          <form action="/comment/<%= post.slug %>" method="POST">
            <div class="form-group">
              <textarea name="comment" class="form-control" rows="3"></textarea>
            </div>
            <% if (user) { %>
              <button type="submit" class="btn btn-primary">Submit</button>
              <% } else { %>
                <button type="submit" disabled class="btn btn-primary">Submit</button>
                <p class="text-danger mt-3 ">Please log in first</p>
                <% } %>
          </form>
        </div>
      </div>

      <!-- Single Comment -->
      <% post.comments.forEach(c => { %>
        <div class="media mb-4">
          <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
          <div class="media-body">
            <h5 class="mt-0">
              <%= c.user %>
            </h5>
            <%= c.body %>
          </div>
        </div>
        <% }) %>

    </div>

    <!-- Sidebar Widgets Column -->
    <%- include ../../includes/_sidebar %>

  </div>
  <!-- /.row -->

</div>