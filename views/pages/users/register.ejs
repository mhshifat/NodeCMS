<div class="container text-center">
  <div class="row mt-5">
    <div class="col-md-4 mx-auto">
      <div class="panel">
        <h3>User Registration</h3>
        <p>Please enter your name, email and password</p>
      </div>
      <form action="/users/register" method="POST">

        <div class="form-group">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </div>

        <div class="form-group">


          <input autofocus autocomplete="off" type="text" class="form-control" name="username" placeholder="Username">

        </div>

        <div class="form-group">


          <input autocomplete="off" type="email" class="form-control" name="email" placeholder="Email Address">

        </div>

        <div class="form-group">

          <input autocomplete="off" type="password" class="form-control" name="password" placeholder="Password">

        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>

      </form>
    </div>
  </div>
</div>
</div>